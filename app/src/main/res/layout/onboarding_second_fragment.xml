<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOnboardingSecond"
    android:orientation="vertical"
    android:padding="@dimen/profile_first_edit_padding">

    <LinearLayout
        android:id="@+id/onboard_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/onboarding_vertical_margin"
        android:paddingLeft="@dimen/onboarding_horizontal_margin"
        android:paddingRight="@dimen/onboarding_horizontal_margin"
        android:paddingTop="@dimen/onboarding_vertical_margin">

        <ImageView
            android:id="@+id/image_onboard"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:srcCompat="@drawable/ic_search" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/on_board_text_horizontal_padding"
        android:paddingRight="@dimen/on_board_text_horizontal_padding"
        android:paddingTop="@dimen/on_board_text_vertical_padding">

        <TextView
            android:id="@+id/onboard_title"
            style="@style/OnboardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пошук" />

        <TextView
            android:id="@+id/onboard_description"
            style="@style/OnboardDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Здійснюйте зручний пошук за певними критеріями" />

    </LinearLayout>

</LinearLayout>